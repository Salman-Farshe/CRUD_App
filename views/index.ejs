<!-- export header file from the partials directory -->
<%- include("partials/header") %>

<div class="container-fluid info">
    <!-- header part -->
    <div class="info__header">
        <h1>
            Gallery
        </h1>
        <p class="lead">
            Where you got everything you need... 
        </p>
        <div class="createNew">
            <a href="/new" class="btn btn-primary">Create</a>
        </div>
    </div>
    <!-- main part / gallery -->
    <div class="info__main">
        <% info.forEach(data => { %>

            <div class="info__main__gallery">
                <h3>
                    <%= data.name %>
                </h3>
                <img class="w-25 h-25" src=" <%= data.image %> ">
            </div>
            <!-- button -->
            <div class="info__footer">
                <a class="btn btn-primary btn-outline-success" href="/<%= data._id %> ">Details</a>
            </div>

        <% }); %>
    </div>
    
</div>

<!-- export footer file from the partials directory -->
<%- include("partials/footer") %>